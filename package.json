{
	"id":"com.moimz.imodule.module.webhard",
	"icon":"fa-archive",
	"title":{
		"ko":"웹하드"
	},
	"version":"3.0.0",
	"description":{
		"ko":"회원 개인에게 자료를 보관할 수 있는 웹하드 계정을 생성하고 관리할 수 있습니다."
	},
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodule.kr",
	"versionChecker":"http://www.moimz.com/ko/api/moimz/getLatest",
	"dependencies":{
		"core":"3.0.0",
		"attachment":"3.0.0",
		"member":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"context":true,
	"global":false,
	"article":false,
	"widget":true,
	"attachments":[
		"webhard"
	],
	"configs":{
		"templet":{
			"type":"templet",
			"default":"default"
		},
		"root_name":{
			"type":"string",
			"default":"My Webhard"
		},
		"root_size":{
			"type":"int",
			"default":10000
		}
	},
	"databases":{
		"webhard_activity_table":{
			"columns":{
				"reg_date":{
					"type":"int",
					"length":11
				},
				"target":{
					"type":"varchar",
					"length":12
				},
				"type":{
					"type":"varchar",
					"length":15
				},
				"midx":{
					"type":"int",
					"length":11
				},
				"data":{
					"type":"longtext"
				}
			},
			"indexes":{
				"reg_date,target,type,midx":"primary_key",
				"target,reg_date":"index"
			}
		},
		"webhard_compress_table":{
			"columns":{
				"hash":{
					"type":"char",
					"length":32
				},
				"midx":{
					"type":"int",
					"length":11
				},
				"files":{
					"type":"longtext"
				},
				"status":{
					"type":"enum",
					"length":"'WAIT','COMPRESSING','COMPRESSED','DOWNLOADED'",
					"default":"WAIT"
				},
				"reg_date":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"hash":"primary_key"
			}
		},
		"webhard_profile_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11
				},
				"disk_usage":{
					"type":"bigint",
					"length":15,
					"default":0
				},
				"disk_limit":{
					"type":"bigint",
					"length":15
				}
			},
			"indexes":{
				"midx":"primary_key"
			}
		},
		"webhard_folder_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"code":{
					"type":"varchar",
					"length":50,
					"is_null":true
				},
				"owner":{
					"type":"int",
					"length":11
				},
				"creator":{
					"type":"int",
					"length":11
				},
				"editor":{
					"type":"int",
					"length":11
				},
				"parent":{
					"type":"int",
					"length":11,
					"default":0
				},
				"linked":{
					"type":"int",
					"length":11,
					"default":0
				},
				"name":{
					"type":"varchar",
					"length":255
				},
				"size":{
					"type":"bigint",
					"length":15,
					"default":0
				},
				"permission":{
					"type":"varchar",
					"length":3,
					"default":"RWD"
				},
				"description":{
					"type":"text",
					"is_null":true
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"update_date":{
					"type":"int",
					"length":11
				},
				"is_shared":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_shared_file":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_shared_child":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_linked_child":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_lock":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_delete":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"opath":{
					"type":"varchar",
					"length":255,
					"is_null":true
				}
			},
			"indexes":{
				"idx":"primary_key",
				"code":"index",
				"owner,parent,is_delete":"index",
				"parent,is_delete":"index",
				"creator,parent,is_delete":"index",
				"editor,owner,is_delete":"index",
				"linked":"index",
				"is_delete":"index"
			},
			"auto_increment":"idx"
		},
		"webhard_favorite_table":{
			"columns":{
				"type":{
					"type":"enum",
					"length":"'FILE','FOLDER'"
				},
				"fidx":{
					"type":"int",
					"length":11
				},
				"midx":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"type,fidx,midx":"primary_key",
				"type,fidx":"index"
			}
		},
		"webhard_file_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11
				},
				"code":{
					"type":"varchar",
					"length":50,
					"is_null":true
				},
				"folder":{
					"type":"int",
					"length":11
				},
				"owner":{
					"type":"int",
					"length":11
				},
				"creator":{
					"type":"int",
					"length":11
				},
				"editor":{
					"type":"int",
					"length":11
				},
				"path":{
					"type":"varchar",
					"length":255
				},
				"name":{
					"type":"varchar",
					"length":180
				},
				"type":{
					"type":"varchar",
					"length":10
				},
				"mime":{
					"type":"varchar",
					"length":100
				},
				"size":{
					"type":"bigint",
					"length":15
				},
				"width":{
					"type":"int",
					"length":5,
					"default":0
				},
				"height":{
					"type":"int",
					"length":5,
					"default":0
				},
				"description":{
					"type":"text",
					"is_null":true
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"update_date":{
					"type":"int",
					"length":11
				},
				"status":{
					"type":"enum",
					"length":"'DRAFT','PUBLISHED'",
					"default":"DRAFT"
				},
				"extra":{
					"type":"text",
					"is_null":true
				},
				"is_shared":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_lock":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_delete":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"opath":{
					"type":"varchar",
					"length":255,
					"is_null":true
				}
			},
			"indexes":{
				"idx":"primary_key",
				"code":"index",
				"name,folder,is_delete":"index",
				"folder,is_delete":"index",
				"creator,folder,is_delete":"index",
				"type,folder,is_delete":"index",
				"reg_date,folder,is_delete":"index",
				"owner,creator,editor,is_delete":"index"
			},
			"auto_increment":"idx"
		},
		"webhard_link_table":{
			"columns":{
				"hash":{
					"type":"char",
					"length":32
				},
				"fidx":{
					"type":"int",
					"length":11
				},
				"email":{
					"type":"varchar",
					"length":100,
					"is_null":true
				},
				"reg_date":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"hash":"primary_key",
				"fidx":"index"
			}
		},
		"webhard_share_table":{
			"columns":{
				"hash":{
					"type":"char",
					"length":32
				},
				"midx":{
					"type":"int",
					"length":11
				},
				"type":{
					"type":"enum",
					"length":"'MODULE','GOOGLE','LINK'"
				},
				"fidx":{
					"type":"int",
					"length":11
				},
				"target":{
					"type":"text",
					"is_null":true
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"expire_date":{
					"type":"int",
					"length":11
				}
			},
			"indexes":{
				"hash":"primary_key",
				"fidx":"index",
				"type,fidx":"index",
				"midx,type,fidx":"index"
			}
		},
		"webhard_share_log_table":{
			"columns":{
				"hash":{
					"type":"char",
					"length":32
				},
				"reg_date":{
					"type":"int",
					"length":11
				},
				"user_agent":{
					"type":"varchar",
					"length":255
				}
			},
			"indexes":{
				"hash,reg_date":"index"
			}
		}
	}
}